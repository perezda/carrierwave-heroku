<h1>Users</h1>

<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Avatar</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= image_tag(user.avatar_url) if user.avatar_url %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'New User', new_user_path %></p>
